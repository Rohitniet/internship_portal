generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Student{
  id Int @default(autoincrement()) @id @unique
  name String
  email String @unique
  password String
  resumeurl String?
  resume  Resume ?
  
}





model Employer{
  id Int @default(autoincrement()) @id
  companyName String
  email String @unique
  password String
  intership  Internship[]

}



model Resume{

  id          Int @default(autoincrement()) @id @unique
  skill       String[]
  location    String
  title       String
  education   String
  ews         Boolean
  studentid   Int @unique

  student    Student @relation(fields: [studentid],references: [id])

}





model Internship {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  skill       String[]
  location    String
  employerId  Int       // ðŸ‘ˆ foreign key
  employer    Employer  @relation(fields: [employerId], references: [id])
}